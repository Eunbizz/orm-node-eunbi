<meta name="description" content="게시글 목록 페이지입니다.">


<style></style>


            <!--우측 컨텐츠 상단 헤더 영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>게시글 목록 조회</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/">Home</a> >
                        </li>
                        <li>
                            <a>게시글 목록</a> >
                        </li>
                        <li class="active">
                            <strong>조회</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <!--우측 콘텐츠 영역 -->
            <div class="wrapper wrapper-content">

                <!-- 게시글 조회 옵션 입력 영역  -->
                <form action="/article/list" method="post" id="searchForm">
                    <div class="ibox-content m-b-sm border-bottom">
                        
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label" for="OrderNo">게시판</label>
                                    <select name="boardTypeCode" id="boardTypeCode" class="form-control">
                                        <option value="0" <% if( searchOption.boardTypeCode == "0"){ %> selected <% } %> >전체</option>
                                        <option value="1" <% if( searchOption.boardTypeCode == "1"){ %> selected <% } %>>공지게시판</option>
                                        <option value="2" <% if( searchOption.boardTypeCode == "2"){ %> selected <% } %>>기술블로깅</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label" for="OrderName">제목</label>
                                    <input type="text" name="title" value="<%=searchOption.title%>" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label" for="MobileNo">게시여부</label>
                                    <select name="isDisplayCode" class="form-control">
                                        <option value="9" <% if( searchOption.isDisplayCode == "9"){ %> selected <% } %> >전체</option>
                                        <option value="1" <% if( searchOption.isDisplayCode == "1"){ %> selected <% } %> >게시함</option>
                                        <option value="0" <% if( searchOption.isDisplayCode == "0"){ %> selected <% } %> >게시안함</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <input type="submit" class="btn btn-primary" value="조회" />
                            <a href="/article/create" class="btn btn-info">신규</a>
                        </div>
                    </div>
                </form>

                <!-- 게시글 전체 건수 조회 표시 영역  -->
                <div class="row">
                    <div class="col-12">총<%=articleCount%> 건 / <%=articles.length%> 건 조회 </div>
                </div>

                <!-- 게시글 조회결과 목록 표시영역  -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">
                                <div class="table-responsive">

                                    <table class="footable table table-hover" data-page-size="3">
                                        <thead>
                                            <tr>
                                                <th data-sort-ignore="true" width="5%">순번</th>
                                                <th data-hide="phone" width="10%">게시판구분</th>
                                                <th width="50%">제목</th>
                                                <th data-hide="phone" width="5%">조회수</th>
                                                <th data-sort-ignore="true" data-hide="phone" width="5%">IP주소</th>
                                                <th data-hide="phone" width="5%">게시상태</th>
                                                <th data-hide="phone"  width="10%">등록일자</th>
                                            </tr>
                                        </thead>
                                        
                                        <tbody class="hoverTblBody">


                                            <% for(var i =0;i<articles.length;i++){ %>
                                               
                                                <tr>
                                                    <td><%=articles[i].article_id%></td>
                                                    
                                                    <td>
                                                        <% if(articles[i].board_type_code == 1){%>
                                                            공지게시판
                                                        <% } else{ %>
                                                            기술블로깅
                                                        <% }%>
                                                    </td>
                                                    
                                                    <td><a href="/article/modify/<%=articles[i].article_id%>"><%=articles[i].title%></a></td>
                                                    <td><%=articles[i].view_count%></td>
                                                    <td><%=articles[i].ip_address%></td>
                                                    
                                                    <td>
                                                        <% if(articles[i].is_display_code == 1){%>
                                                            게시함
                                                        <% } else{ %>
                                                            게시안함
                                                        <% }%>
                                                    </td>
                                                    
                                                    
                                                    <td><%=articles[i].reg_date%></td>
                                                </tr>

                                           <% } %>
                                           

                                        </tbody>

                                        <tfoot>
                                            <tr>
                                                <td colspan="7">
                                                    <ul class="pagination pull-left"></ul>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

<script>
    $(document).ready(function () {
        $('.footable').footable();
    });
</script>







